
@model ViewModels.AdminViewModel.Users.Vm_User;
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor



  


<div class="page-wrapper">
  <!-- Start of Main -->
  <main class="main login-page" style="margin-top: 60px;">
    <!-- Start of Breadcrumb -->
   
    <!-- End of Breadcrumb -->
    
      <div class="page-content mt-10">
        <div class="container row justify-content-center" style="padding-left: 0px !important;">
         
          <div class="login-popup col-12" style="background-color: white">
            <div class="tab tab-nav-boxed tab-nav-center tab-nav-underline">
              <ul class="nav nav-tabs text-uppercase" role="tablist">
                <li class="nav-item">
                  <a href="/login/login" class="SetLink" style="font-size: large;padding: 30px;margin-right: 40px;">ورود
                  </a>
                </li>
                <li class="nav-item">
                  <a href="#sign-up" class="nav-link active" style="font-size: large">عضویت</a>
                </li>
              </ul>
              <div class="tab-content">

               


     

               
           

                
                                             

                <div class="tab-pane active" id="sign-up">

                 
                   <form action="/login/sendtoken" method="post">

                       
                   @if ( ViewBag.msg  != null)
                  {
                       <p style="color:red;" class="mt-3">@ViewBag.msg </p>
                     
                  }
                      
                    
                  
               
                
                  <div class="form-group mt-5">
                    <input style="
                            padding: 15px;
                            border: 1px solid rgb(207, 206, 206);
                            border-radius: 8px;
                          " type="number" class="form-control"  
                      placeholder="  شماره موبایل خود را وارد کنید " name="PhoneUs"
                       required   />
                     
                  </div>
                 
                  <div class="form-group mb-0 mt-3">
                    <input style="
                            padding: 15px;
                            border: 1px solid rgb(207, 206, 206);
                            border-radius: 8px;
                          " type="password" class="form-control" 
                      placeholder="گذرواژه امن خود را وارد نمایید" name="PasswordUs"
                      required  />
                      
                  </div>
                 
                
                 

                  <div class="form-checkbox d-flex align-items-center justify-content-between mb-5 mt-3">
                    <input type="checkbox" class="custom-checkbox" 
                    required   />
                    <label for="remember" class="font-size-md">با
                      <a href="#" class="text-primary font-size-md">سیاست حفظ حریم خصوصی
                      </a>
                      سایت موافقم.
                      </label>
                      <br>
                      
                  </div>
                  <button type="submit" class="btn btn-primary mt-7 form-control"
                    style="padding: 18px; border-radius: 8px; font-size: 25px;background-color: #FFCC01;color:white">عضو شوید
                  </button>
                  </form>
                </div>
                




              </div>
            </div>
            <br />
            <br />
            <br />
          </div>
        </div>
      </div>
    
  </main>
  <!-- End of Main -->
</div>

</div>
