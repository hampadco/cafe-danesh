  <!-- ماشین آلات اداری-->
  @model IEnumerable<ViewModels.AdminViewModel.Product.Vm_Product>
      <div class="featured-products-wrapper py-3">
        <div class="container" style="margin-top: 50px !important;">
          
          <div class=" d-flex align-items-center justify-content-between">
            <h1 class="text-center  btn btn-success form-control">  @TempData["cat"]</h1>
            
            
          </div>
           <p class=" alert alert-light text-center form-control" onclick="history.back()">بازگشت</p>
         
          
          <div class="row g-3">
            <!-- Featured Product Card-->

             @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                      <div class="col-6 col-md-4 col-lg-3" >
                        <div class="card featured-product-card">
                          <div class="" >
                            <!-- Badge--><span class="badge badge-warning custom-badge"><i class="lni lni-star"></i></span>
                            <div class="product-thumbnail-side">
                              <!-- Wishlist Button -->
                              <!-- Thumbnail --><a class="product-thumbnail d-block" href="/home/detailsshop/@item.Id"><img style="min-height: 120px;max-height: 120px;" src="/fileupload/@item.ImageMainPro" alt="" ></a>
                            </div>
                            <div class="product-description">
                              <!-- Product Title --><a class="product-title d-block" href="/home/detailsshop/@item.Id" style="text-overflow: ellipsis;white-space: nowrap;padding: 5px;overflow: hidden; ">@item.TitleProductPro</a>
                              <!-- Price -->
                              
                            </div>
                          </div>
                        </div>
                      </div>
                    }

                }else
                {
                  <p class="form-control text-center">هیچ خدمت یا کالایی ثبت نشده فعلا برای این دسته بندی...</p>
                }
         
          </div>
        </div>
      </div>