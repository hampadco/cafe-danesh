      <div class="flash-sale-wrapper">
        <div class="container">
         
            <h1 class="text-center alert alert-light form-control">
                محصولات پرفروش
            </h1>
           
          
          <!-- فروش ویژه Slide-->
          <div class="flash-sale-slide owl-carousel">
            <!-- Single Flash Sale Card-->


                    @if (ViewBag.product != null)
                {
                    @foreach (var item in ViewBag.product)
                    {
                      <div class="card flash-sale-card">
                        <div class="card-body"><a href="home/detailsshop/@item.Id"><img src="/fileupload/@item.ImageMainPro" alt=""><span class="product-title">@item.TitleProductPro</span>
                            <p class="sale-price" id="@item.Id">@item.Price_Pro تومان </p>
