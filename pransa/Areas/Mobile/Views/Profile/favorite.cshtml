                                                                <i class="mdi mdi-star active"></i>
                                                                <i class="mdi mdi-star active"></i>
                                                                <i class="mdi mdi-star active"></i>
                                                                <i class="mdi mdi-star active"></i>
                                                            </div>
                                                        </div>
                                                        <a class="product-thumb" href="/details/index/@item.Id">
                                                            <img style="border-radius: 15px;"  src="~/fileupload/@item.ImageMainPro" alt="Product Thumbnail">
                                                        </a>
                                                        <div class="product-card-body">
                                                            <h5 class="product-title">
                                                                <a href="/details/index/@item.Id">@item.TitleProductPro</a>
                                                            </h5>
                                                            <a class="product-meta" href="/details/index/@item.Id">@item.BrandPro</a>
                                                            <span class="product-price">@item.PricePro تومان</span>
                                                        </div>
                                                    </div>
                                                </div> 
                                }
                            }
                               
                                            </div>
                                        </div>
                                    </div> 
