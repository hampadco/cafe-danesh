                                                        <h3> کدپستی برای ارسال سفارشات </h3>
                                                    </div>
                                                    <div class="form-row">
                                                        <input asp-for="Post" type="text" class="input-ui pl-2  text-right dir-rtl" placeholder=" لطفا کدپستی خود را وارد کنید">
                                                    </div>
